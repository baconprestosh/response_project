<!DOCTYPE html>
<html>
  <head>
    <title>ResponseProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="utility-nav" class='clearfix'>
      <p class="flash notice"> <%= notice %> </p>
      <p class="flash alert"> <%= alert %> </p>
      <div id="user-buttons">
      <% if !current_user %>
        <%= link_to "Sign In", new_user_session_path, {class: 'util-button'} %>
        <%= link_to "Sign Up", new_user_registration_path, class: 'util-button' %>
      <% else %>
        <div id="signed_in">
          <a href='<%= edit_user_registration_path %>' >
          <div class="profile-photo" style='background-image: url(<%=current_user.profile_photo%>);'>
        </div>
          <%= "#{current_user.first_name}" %>
        </a>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'util-button' %>
        </div>
      <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
